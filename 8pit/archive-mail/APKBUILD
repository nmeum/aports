pkgname=archive-mail
pkgver=0_git20200401
_commit=023c6c49a4405e8a5b56769b2a668844675094a0
pkgrel=0
pkgdesc="Maintains a maildir archive synced with a current maildir"
url="https://github.com/nmeum/archive-mail"
arch="all"
license="GPL-3.0-or-later"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/nmeum/archive-mail/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	go build -o $pkgname -trimpath
}

check() {
	./tests/run_tests.sh
}

package() {
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

cleanup_srcdir() {
	go clean -modcache
	default_cleanup_srcdir
}

sha512sums="9e35a6c05d64d7a4cb497f03b55ece178d40459290e462e83b20d88b10d6f43cd04cd48d6839e8d25f470d537c4a68f1b9959cd6c7dcf5b56766ece00ed31f07  archive-mail-0_git20200401.tar.gz"
