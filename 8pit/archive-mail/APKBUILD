pkgname=archive-mail
pkgver=0_git20200605
_commit=fb0904a4c339e11f838d08d0d178cb85fd6f9f7a
pkgrel=0
pkgdesc="Maintains a maildir archive synced with a current maildir"
url="https://github.com/nmeum/archive-mail"
arch="all"
license="GPL-3.0-or-later"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/nmeum/archive-mail/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"

build() {
	go build -o $pkgname -trimpath
}

check() {
	./tests/run_tests.sh
}

package() {
	install -Dm755 $pkgname "$pkgdir"/usr/bin/$pkgname
}

cleanup_srcdir() {
	go clean -modcache
	default_cleanup_srcdir
}

sha512sums="f6f2899547143b3af66a1fe1533f4eddf168cad9e2e7b69ba4e4cf5a078b2fc20675f375414d68c1b0945471b342f4af1d3e77bd342081b1a9bb26724e22c8be  archive-mail-0_git20200605.tar.gz"
