# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Maintainer: Sören Tempel <soeren+alpine@soeren-tempel.net>
pkgname=creek
pkgver=0.4.0
pkgrel=0
pkgdesc="A small screenlocker for Wayland compositors"
url="https://github.com/nmeum/creek"
arch="aarch64 x86_64" # blocked by zig
license="MIT"
makedepends="zig wayland-protocols wayland-dev fcft-dev pixman-dev"
source="https://files.8pit.net/dl/creek-$pkgver.tar.gz"

build() {
	DESTDIR="$builddir/out" zig build \
		--prefix /usr \
		-Doptimize=ReleaseSafe \
		-Dcpu=baseline \
		install
}

package() {
	mkdir -p "$pkgdir"
	cp -r out/* "$pkgdir"
}

sha512sums="
2bb2886c52ed2dade3f0334a04b6d918e56454f7d7a569a92e18193d8487ffcf00a6c11940dca688586e80980e7fff1fe8b6c12d02a5820c55fffdcaa16b7e64  creek-0.4.0.tar.gz
"
