pkgname=dwm
pkgver=6.2
_commit="33148cc9a0160f73e3a0d288d20d04e0b86e4412"
pkgrel=1
pkgdesc="dwm - dynamic window manager"
url="http://dwm.suckless.org"
arch="all"
license="MIT/X"
depends=""
depends_dev=""
makedepends="libxft-dev libx11-dev libxinerama-dev"
install=""
subpackages="$pkgname-doc"
source="$pkgname-$pkgver-8pit.tar.gz::https://github.com/nmeum/dwm/archive/${_commit}.tar.gz
	config.h"
builddir="$srcdir"/$pkgname-$_commit

prepare() {
	cd "$builddir"
	default_prepare

	cp "$srcdir"/config.h config.h
	sed -i -e '/CFLAGS/{s/-Os//;s/=/+=/}' \
		-e '/LDFLAGS/{s/=/+=/}' \
		config.mk
}

build() {
	make X11INC=/usr/include/X11 \
		X11LIB=/usr/lib/X11 \
		FREETYPEINC=/usr/include/freetype2 \
		-C "$builddir"
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" \
		-C "$builddir" install
}

sha512sums="779697584214eaf32b36405b7e61ecbcd8f615a285e01368a9ec4eefcad357642087b0dcbc053b1b4723ae5cc1fdcfa3a99cded159670a707f1ca636f9584648  dwm-6.2-8pit.tar.gz
43215158b005073324de00e63d0dbf2e9e02c04d62ecd43f9199b047b261aca1984aeecfe577e3e6d8a314cc95cda0c025b687f5954c11492da1b9f9d0c9daf2  config.h"
