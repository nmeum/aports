# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Maintainer: Sören Tempel <soeren+alpine@soeren-tempel.net>
pkgname=edward
pkgver=0.5.1
pkgrel=1
pkgdesc="Implementation of the ed text editor in Scheme"
url="https://github.com/nmeum/edward"
arch="all"
license="GPL-3.0-or-later"
makedepends="chicken"
checkdepends="ed"
options="net"
source="https://github.com/nmeum/edward/archive/refs/tags/$pkgver/edward-$pkgver.tar.gz
	static.patch"

build() {
	export CHICKEN_INSTALL_REPOSITORY="$builddir"
	export CHICKEN_REPOSITORY_PATH="$(env -i chicken-install -repository):$builddir"

	chicken-install -n
}

check() {
	./run-tests.sh
}

package() {
	install -Dm755 bin/edward "$pkgdir"/usr/bin/edward
}

