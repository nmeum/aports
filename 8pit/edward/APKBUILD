pkgname=edward
pkgver=0.5.1
pkgrel=2
pkgdesc="Implementation of the ed text editor in Scheme"
url="https://github.com/nmeum/edward"
arch="all"
license="GPL-3.0-or-later"
makedepends="chicken"
checkdepends="ed"
options="net"
source="https://files.8pit.net/dl/edward-0.5.1-81-g21de24f.tar.gz"
builddir="$srcdir/$pkgname-$pkgver-81-g21de24f/"

build() {
	make
}

check() {
	make check
}

package() {
	make PREFIX=/usr DESTDIR=$pkgdir install
}

