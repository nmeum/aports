pkgname=git-shuffle
pkgver=1.0.0
pkgrel=0
pkgdesc="Randomize Git commit timestamps to enhance privacy"
url="https://github.com/nmeum/git-shuffle"
arch="all"
license="GPL-3.0-or-later"
makedepends="libgit2-dev"
subpackages="$pkgname-doc"
options="!check" # no test suite
source="$pkgname-$pkgver.tar.gz::https://github.com/nmeum/git-shuffle/archive/refs/tags/$pkgver.tar.gz"

build() {
	make
}

package() {
	make PREFIX=/usr DESTDIR="$pkgdir" install
}

sha512sums="a928bf8804df9c65ff91f8ccdefba71afa2d40ef134332df06759915a2febc84a7e0a0adb6935cb2e83f89edaf82bf8e71cbfc1a2f8974eceb29bbd935c3de5b  git-shuffle-1.0.0.tar.gz"
