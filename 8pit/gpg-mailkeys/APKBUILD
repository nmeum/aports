# Contributor: Sören Tempel <soeren+alpine@soeren-tempel.net>
# Maintainer:  Sören Tempel <soeren+alpine@soeren-tempel.net>
pkgname=gpg-mailkeys
pkgver=2.5
pkgrel=0
pkgdesc="Collection for all kinds of pgp related things"
url="http://pgp-tools.alioth.debian.org/"
arch="all"
license="GPL2+"
depends="gnupg"
makedepends=""
install=""
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::http://ftp.debian.org/debian/pool/main/s/signing-party/signing-party_${pkgver}.orig.tar.gz"
builddir="$srcdir/$pkgname"

build() {
	return 0
}

package() {
	cd "$builddir"
	install -Dm755 $pkgname \
		"$pkgdir"/usr/bin/$pkgname \
		|| return 1
	install -Dm644 $pkgname.1 \
		"$pkgdir"/usr/share/man/man1/$pkgname.1 \
		|| return 1

	install -Dm644 README \
		"$pkgdir"/usr/share/doc/$pkgname/README \
		|| return 1
	install -Dm644 example.gpg-mailkeysrc \
		"$pkgdir"/usr/share/doc/$pkgname/examples/gpg-mailkeysrc \
		|| return 1
}

md5sums="ebf76aabd1c5c87ca47b96e298f2d646  gpg-mailkeys-2.5.tar.gz"
sha256sums="62db91ccbde650ffbb332beab9cba0676b0d42fc46034fa3c28a471cc0ec4bf8  gpg-mailkeys-2.5.tar.gz"
sha512sums="a04875bfaef791a6505134dd2530148d5e6baaa8aa5610e75d42fbf59e884fafffb5de2486425bb53e6464ff3fd35b974684d8bc85291750e4a7bd8bb82b0da3  gpg-mailkeys-2.5.tar.gz"
