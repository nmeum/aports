pkgname=ifupdown-ng-waitif
pkgver=0.1.1
pkgrel=0
pkgdesc="Executor for ifupdown-ng which blocks until the interface is running"
url="https://github.com/nmeum/ifupdown-ng-waitif"
arch="all"
license="GPL-3.0-or-later"
makedepends="libmnl-dev"
subpackages="$pkgname-doc"
options="!check" # no test suite
source="https://github.com/nmeum/ifupdown-ng-waitif/archive/$pkgver/$pkgname-$pkgver.tar.gz"

build() {
	make RUNDIR=/var/run
}

package() {
	make DESTDIR="$pkgdir" \
		PREFIX=/usr \
		install
}

