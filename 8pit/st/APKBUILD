# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=st
pkgver=0.6
pkgrel=3
pkgdesc="a simple terminal implementation for X"
url="http://st.suckless.org/"
arch="all"
license="MIT/X"
depends="ncurses-terminfo"
depends_dev=""
makedepends="$depends_dev fontconfig-dev freetype-dev libx11-dev libxft-dev
	libxext-dev"
install=""
subpackages="$pkgname-doc"
source="http://dl.suckless.org/st/st-$pkgver.tar.gz
	cleanup-cflags.patch
	terminfo.patch
	config.h"

_builddir="$srcdir"/st-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done

	# Copy our configuration file
	cp "$srcdir"/config.h "$_builddir"/config.h || return 1
}

build() {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
	make PREFIX=/usr DESTDIR="$pkgdir" install || return 1
	mkdir -p "$pkgdir"/usr/share/applications

	cat >"$pkgdir"/usr/share/applications/st.desktop <<EOF
[Desktop Entry]
Name=st
Comment=st is a simple virtual terminal emulator for X which sucks less
Exec=st
Terminal=false
Type=Application
Icon=gnome-xterm
Categories=System;TerminalEmulator;
EOF

}

