pkgname=vim
pkgver=8.2.1168
pkgrel=1
pkgdesc="Improved vi-style text editor"
url="https://www.vim.org/"
arch="all"
license="Vim"
options="!check"  # some tests are failing
depends="xxd"
makedepends="ncurses-dev libxt-dev libx11-dev"
subpackages="$pkgname-doc ${pkgname}diff::noarch xxd"
source="$pkgname-$pkgver.tar.gz::https://github.com/vim/vim/archive/v$pkgver.tar.gz
	vimrc
	"

# secfixes:
#   8.1.1365-r0:
#     - CVE-2019-12735
#   8.0.1521-r0:
#     - CVE-2017-6350
#     - CVE-2017-6349
#   8.0.0329-r0:
#     - CVE-2017-5953
#   8.0.0056-r0:
#     - CVE-2016-1248

prepare() {
	# Read vimrc from /etc/vim
	echo '#define SYS_VIMRC_FILE "/etc/vim/vimrc"' >> src/feature.h
	default_prepare
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--with-features=normal \
		--with-x=yes \
		--disable-nls \
		--enable-multibyte \
		--enable-gui=no \
		--with-compiledby="Alpine Linux"
	make
}

check() {
	make test
}

package() {
	make -j1 DESTDIR="$pkgdir/" install

	install -Dm644 runtime/doc/uganda.txt \
		"$pkgdir/usr/share/licenses/$pkgname/LICENSE"
	install -Dm644 "$srcdir"/vimrc "$pkgdir"/etc/vim/vimrc
}

vimdiff() {
	pkgdesc="view file diffs in vim"
	depends="diffutils vim"
	options="!tracedeps"

	install -d "$subpkgdir"/usr/bin
	mv "$pkgdir"/usr/bin/vimdiff "$subpkgdir"/usr/bin
}

xxd() {
	pkgdesc="tool to make (or reverse) a hex dump"
	depends=""
	echo "$pkgdir" "$subpkgdir"
	mkdir -p "$subpkgdir/usr/bin"
	mv "$pkgdir/usr/bin/xxd" \
	   "$subpkgdir/usr/bin/"
}

